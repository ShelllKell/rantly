<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="container">
    <div class="logo">
      <%= link_to "Rant.ly", dashboard_path %>
    </div>
    <% if current_user %>
      <div class="middle">
        <%= link_to "Dashboard", dashboard_path %> | <%= link_to "Following", user_follows_path(current_user.id) %>
        | <%= link_to "Favorites", user_favorites_path(current_user.id) %> | <%= link_to "Search", search_index_path %>
      </div>
      <div class="right">
        <div class="join">
          <%= link_to "Logout", logout_path %>
        </div>
    <% else %>
      <div class="right">
        <div class="login">
          <%= link_to "Login", login_path %>
        </div>
        <div class="join">
          <%= link_to "Join", new_user_path %>
        </div>
    <% end %>
    </div>
    </div>
  </div>
</header>

<%= yield %>

</body>
</html>
