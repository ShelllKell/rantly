<div class="dashboard">
  <div class="rant-input-left">
    <%= image_tag current_user.image.url(:thumb) %>
    <br>

    <div class="user">
      <%= link_to current_user.username, edit_user_path(current_user) %>
    </div>
    <% if alert %>
      <%= alert %>
    <% end %>
    <div>
      <%= render 'rants/form' %>
    </div>
  </div>

  <div class="latest-rants">
    <h1>Favorites</h1>

    <% @favorites.each do |favorite| %>
      <p><%= truncate(favorite.rant.rant, :length => 300) %></p>

      <div class="favorite">
        <%= link_to "Unfavorite", unfavorite_path(favorite.user, favorite.rant) %>
        <%= favorite.favorite_count %>
      </div>
    <% end %>
  </div>
</div>