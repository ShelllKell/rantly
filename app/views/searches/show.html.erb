<div class="dashboard">
  <div class="rant-input-left">
    <%= image_tag current_user.image.url(:thumb) %>
    <br>

    <div class="user">
      <%= link_to current_user.username, edit_user_path(current_user) %>
    </div>
    <% if alert %>
      <%= alert %>
    <% end %>
    <div>
      <%= render 'rants/form' %>
    </div>
  </div>

  <div class="latest-rants">
    <h1>Search Results</h1>
    <h5><%= "for:" + " " + @search.term %></h5>
    <h5><%= link_to "Back to search form", new_search_path %></h5>
    <br>
    <p>

    <div class="topic"><%= "Results:" %></div>
    <% @search.users.each do |user| %>
      <% user.rants.each do |rant| %>
        <ul><%= rant.rant %></ul>
      <% end %>
    <% end %>
    <% @search.rants.each do |rant| %>
      <ul><%= rant.rant %></ul>
    <% end %>

  </div>
</div>