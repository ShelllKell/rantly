<div class="dashboard">
  <div class="rant-input-left">
    <img src="https://pbs.twimg.com/profile_images/3640983126/2eab5ffd09240704352ac1b689e08d05.jpeg" width=100px height=100px/>
    <br>

    <div class="user">
      <%= link_to current_user.username, edit_user_path(current_user) %>
    </div>
    <% if alert %>
      <%= alert %>
    <% end %>
    <div>
      <%= render 'rants/form' %>
    </div>
  </div>

  <div class="latest-rants">
    <h1>Search Results</h1>
    <h5><%= "for:" + " " + @search.term %></h5>
    <h5><%= link_to "Back to search form", new_search_path %></h5>
    <br>
    <p>
    <div class="topic"><%= "Rants that belong to #{@search.term.upcase}:" %></div>
    <% @search.users.each do |user| %>
      <% user.rants.each do |rant| %>
        <%= rant.rant %>
      <% end %>
    <% end %>
    </p>
    <p>
    <div class="topic"><%= "Rants with #{@search.term.upcase} in them:" %></div>
    <% @search.rants.each do |rant| %>
      <%= rant.rant %>
    <% end %>
    </p>
  </div>

</div>