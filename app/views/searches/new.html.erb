<div class="dashboard">
  <div class="rant-input-left">
    <img src="https://pbs.twimg.com/profile_images/3640983126/2eab5ffd09240704352ac1b689e08d05.jpeg" width=100px height=100px/>
    <br>

    <div class="user">
      <%= link_to current_user.username, edit_user_path(current_user) %>
    </div>
    <% if alert %>
      <%= alert %>
    <% end %>
    <div>
      <%= render 'rants/form' %>
    </div>
  </div>


  <div class="latest-rants">
    <h1>Search</h1>

    <%= form_for(:search, url: search_path, method: :get) do |form| %>
      <div class="search-box">
        <%= form.text_field :term, placeholder: "Search here" %>
      </div>
      <div class="join">
        <%= form.submit "Search", class: 'button' %>
      </div>
    <% end %>
  </div>

</div>