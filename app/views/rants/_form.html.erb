<div>
<%= form_for [@user, @rant] do |f| %>
  <div class="about">
    <%= f.label :topic, "A rant about:" %>
    <br>
    <%= f.text_field :topic, autofocus: true %>
  </div>
  <br>

  <div>
    <%= f.label :rant, "Rant:" %>
    <br>
    <%= f.text_area :rant, :rows => 20, autofocus: true, placeholder: "Rant about something or at someone..." %>
  </div>
  <br>

  <div>
    <%= f.submit "RANT", class: 'button' %>
  </div>
<% end %>
</div>