
    <%= form_for @user do |f| %>

      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      <% end %>





      <body>

        <div class="container">

          <form class="form-signin">
            <h2 class="form-signin-heading">Sign up for Rantly!</h2>
          <p>
            <label for="inputEmail" class="sr-only">First Name</label>
            <%= f.text_field :email, autofocus: true, placeholder: "First Name", class: "form-control" %>
          </p>
          <p>
            <label for="inputEmail" class="sr-only">Last Name</label>
            <%= f.text  _field :email, autofocus: true, placeholder: "Last Name", class: "form-control" %>
          </p>
          <p>
            <label for="inputEmail" class="sr-only">Email address</label>
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
          </p>
          <p>
            <label for="inputPassword" class="sr-only">Password</label>
            <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control" %>
          </p>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="remember-me"> Remember me
              </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
          </form>
          <% end %>
        </div> <!-- /container -->


        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>


    </body></html>
